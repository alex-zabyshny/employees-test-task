{
	"include": ["./src", "./config"],
	"exclude": ["./src/tests"],
	"compilerOptions": {
		"module": "Node16",
		"outDir": "dist",
		"sourceMap": true,
		"inlineSources": true,
		"lib": ["ES2022"],
		"target": "ES2022",
		"moduleResolution": "Node16",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowJs": true
	}
}
